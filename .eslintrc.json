{
  "root": true,
  "extends": "eslint:recommended",
  "rules": {
    "comma-dangle": ["error", "never"],
    "no-param-reassign": ["error", {"props": false}],
    "no-multi-spaces": "off",
    "function-paren-newline": ["error", "consistent"]
  },
  "env": {
    "browser": true,
    "es2023": true
  },
  "parserOptions": {
    "ecmaVersion": "2023",
    "sourceType": "module"
  },
  "globals": {
    "Turbo": "readonly",
    "Trix": "readonly"
  },
  "ignorePatterns": ["**/builds/*js"]
}
