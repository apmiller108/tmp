.container.py-5
  .row
    .col-lg-8.mx-auto
      .card.shadow-sm
        .card-header.bg-primary.text-white
          %h1.mb-0
            %i.fas.fa-user-circle.me-2
            Account

        .card-body
          .alert.alert-info.d-flex.align-items-center
            %i.fas.fa-envelope.me-2
            %p.mb-0= email

        .card-header.bg-light
          %h2.h4.mb-0
            %i.fas.fa-cog.me-2
            Generative Text Settings

        .card-body
          = form_with model: [user, setting], class: 'needs-validation' do |form|
            .grid.mb-3
              .g-col-4
                = form.label 'Default model', class: 'form-label fw-bold'
                = form.collection_select :text_model,
                                      GenerativeText::MODELS.sort_by(&:vendor),
                                      :api_name,
                                      :name,
                                      {},
                                      class: 'form-select'
              .g-start-9.g-col-4.d-flex.justify-content-center.align-items-center
                = link_to "Manage presets", generate_text_presets_path, class: 'link-offset-1'
            .d-flex.justify-content-center.align-items-center
              = form.submit 'Save', class: 'btn btn-primary w-25'
