= tag.turbo_frame(id: id, class: 'c-memo-form') do
  = form_with model: [current_user, memo], data: { controller: 'memo-form' } do |form|
    - if memo.errors.any?
      .form-errors
        %ul
          - memo.errors.each do |e|
            %li= e.full_message
    .grid
      .g-col-9
        = form.label :title, class: 'form-label'
        = form.text_field :title, class: 'form-control'
      .g-col-3.d-flex.justify-content-end.align-items-center
        = render ColorPickerComponent.new(swatches:, default_color:, **color_picker_options)
    %div.mt-3
      = render WysiwygEditorComponent.new(object: memo, method: :content)
    .btn-group.d-flex.justify-content-end.my-3{'role' => :group, 'aria-label' => 'Memo Form'}
      = form.submit submit_value, class: 'btn btn-outline-primary flex-grow-0', data: { action: 'click->memo-form#onSubmit:prevent' }
      - if memo.persisted?
        = link_to "Cancel", user_memo_path(current_user, memo), class: 'btn btn-outline-secondary flex-grow-0'
      - else
        %button.btn.btn-outline-secondary.flex-grow-0{data: { controller: 'modal-closer' }} Cancel

