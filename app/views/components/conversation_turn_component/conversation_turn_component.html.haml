.c-conversation-turn.mb-3{ id: }
  .turn.grid
    .g-col-1
      %i{ class: [icon_class, 'fs-1'] }
    .g-col-11
      .card.segment{ class: "segment-#{turn.role}" }
        .card-body{ class: pending? && 'text-center' }
          - if pending?
            = render SpinnerComponent.new
          - else
            - if assistant?
              = render ClipboardComponent.new(css_class: 'assistant-response', position: :bottom) do |c|
                = c.with_copyable do
                  %div{ data: { 'clipboard-target' => 'source' } }= content.html_safe
            - else
              = content
