= content_for :title do
  .conversation-title.container.mb-1.grid{ data: { controller: 'tooltip' } }
    .g-start-5.g-col-4
      = render partial: 'conversations/title_form', locals: { conversation: @conversation }
    .g-col-4.d-flex.align-items-center.justify-content-end
      - if @conversation.memo.nil?
        = button_to [current_user, @conversation], method: :delete, data: { turbo: false,
                                                'bs-toggle' => 'tooltip', 'bs-title' => t('conversation.delete') },
                                                class: 'btn icon-btn icon-btn-sm' do
          %i.bi.bi-trash3.text-danger
= render ConversationComponent.new(conversation: @conversation)
